{
  "tech_stack": [
    "TypeScript",
    "Express",
    "Drizzle ORM (PostgreSQL)",
    "WebSockets (ws)",
    "Vite + React",
    "TailwindCSS",
    "Google Gemini",
    "Axios"
  ],
  "features": [
    {
      "name": "Auth & Sessions",
      "description": "User auth middleware and role-based guards.",
      "files": ["server/middleware/auth.ts", "server/routes.ts"],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {"title": "Auth APIs", "version": "1.0.0"},
        "paths": {
          "/api/customers/me": {"get": {"summary": "Get current user's customer profile", "responses": {"200": {"description": "OK"}}}},
          "/api/whatsapp/messages": {"get": {"summary": "List WhatsApp messages", "responses": {"200": {"description": "OK"}}}}
        }
      }
    },
    {
      "name": "Containers",
      "description": "CRUD and queries for containers.",
      "files": ["server/routes.ts", "server/storage.ts"],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {"title": "Container APIs", "version": "1.0.0"},
        "paths": {
          "/api/containers": {"get": {"summary": "List containers", "responses": {"200": {"description": "OK"}}}},
          "/api/containers/{id}": {"get": {"summary": "Get container", "parameters": [{"name": "id", "in": "path", "required": true, "schema": {"type": "string"}}], "responses": {"200": {"description": "OK"}}}}
        }
      }
    },
    {
      "name": "Service Requests",
      "description": "Create, assign, start, complete service requests.",
      "files": ["server/routes.ts", "server/storage.ts"],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {"title": "Service Request APIs", "version": "1.0.0"},
        "paths": {
          "/api/service-requests": {"get": {"summary": "List service requests", "responses": {"200": {"description": "OK"}}}},
          "/api/service-requests/{id}/start": {"post": {"summary": "Start a service request", "parameters": [{"name": "id", "in": "path", "required": true, "schema": {"type": "string"}}], "responses": {"200": {"description": "Started"}}}},
          "/api/service-requests/{id}/complete": {"post": {"summary": "Complete a service request", "parameters": [{"name": "id", "in": "path", "required": true, "schema": {"type": "string"}}], "responses": {"200": {"description": "Completed"}}}}
        }
      }
    },
    {
      "name": "Alerts",
      "description": "Alert listing and processing.",
      "files": ["server/routes.ts", "server/services/alerts.ts"],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {"title": "Alert APIs", "version": "1.0.0"},
        "paths": {
          "/api/alerts/open": {"get": {"summary": "Get open alerts", "responses": {"200": {"description": "OK"}}}},
          "/api/alerts/process": {"post": {"summary": "Process new alert", "responses": {"200": {"description": "Processed"}}}}
        }
      }
    },
    {
      "name": "WhatsApp Webhook & Media",
      "description": "Webhook handler and media proxy.",
      "files": ["server/routes.ts", "server/services/whatsapp.ts"],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {"title": "WhatsApp APIs", "version": "1.0.0"},
        "paths": {
          "/api/webhook/whatsapp": {"post": {"summary": "Receive WhatsApp webhook", "responses": {"200": {"description": "Processed"}}}},
          "/api/whatsapp/media/{ref}": {"get": {"summary": "Serve WhatsApp media placeholder", "parameters": [{"name": "ref", "in": "path", "required": true, "schema": {"type": "string"}}], "responses": {"200": {"description": "PNG"}}}}
        }
      }
    }
  ]
