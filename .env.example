# ContainerGenie Service Hub - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# ============================================
# APPLICATION
# ============================================
NODE_ENV=production
FRONTEND_URL=https://your-domain.com
PORT=5000

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require&channel_binding=require

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Generate strong random strings for these:
# - JWT_SECRET: openssl rand -base64 64
# - SESSION_SECRET: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
SESSION_SECRET=your_session_secret_here
BCRYPT_SALT_ROUNDS=12

# ============================================
# WHATSAPP BUSINESS API
# ============================================
CLOUD_API_ACCESS_TOKEN=your_whatsapp_access_token
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_GRAPH_API_VERSION=v20.0
WA_PHONE_NUMBER_ID=your_phone_number_id
WABA_ID=your_waba_id
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token

# ============================================
# ORBCOMM IOT PLATFORM
# ============================================
ORBCOMM_URL=wss://wamc.wamcentral.net:44355/cdh
ORBCOMM_USERNAME=your_username
ORBCOMM_PASSWORD=your_password
ENABLE_ORBCOMM_DEV=false

# ============================================
# EMAIL (SMTP)
# ============================================
# Recommended: Use SendGrid, AWS SES, or similar for production
# Gmail is NOT recommended for production use
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_SECURE=false
EMAIL_FROM=noreply@your-domain.com

# ============================================
# AI / ML SERVICES
# ============================================
GOOGLE_AI_API_KEY=your_google_ai_key
NVIDIA_API_KEY=your_nvidia_key
OPENAI_API_KEY=your_openai_key_optional
SUPERMEMORY_API_KEY=your_supermemory_key
QDRANT_API=your_qdrant_jwt_token
QDRANT_URL=https://your-cluster.gcp.cloud.qdrant.io

# ============================================
# MAP SERVICES
# ============================================
REACT_APP_MAPMYINDIA_API_KEY=your_mapmyindia_key

# ============================================
# EXTERNAL INVENTORY DATABASE (OPTIONAL)
# ============================================
# If using external inventory source, configure these:
INVENTORY_SOURCE_DATABASE_URL=postgresql://username:password@host:port/database
INVENTORY_SOURCE_TABLE=public.products
INVENTORY_COL_ID=id
INVENTORY_COL_PART_NAME=name
INVENTORY_COL_PART_NUMBER=sku
INVENTORY_COL_CATEGORY=type
INVENTORY_COL_QTY=stock_available
INVENTORY_COL_REORDER=min_stock_level
INVENTORY_COL_PRICE=price
INVENTORY_COL_CREATED_AT=created_at
INVENTORY_COL_UPDATED_AT=updated_at

# ============================================
# VECTOR STORE (RAG)
# ============================================
CHROMA_URL=http://localhost:8000

# ============================================
# SECURITY HEADERS
# ============================================
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_optional

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true
ENABLE_DETAILED_ERRORS=false
