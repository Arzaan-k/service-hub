# =============================================================================
# Docker Environment Configuration Template
# =============================================================================
# IMPORTANT: Copy this file to .env in the project root and fill in values
# DO NOT commit the .env file to version control!
# =============================================================================

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://your-domain.com

# =============================================================================
# DATABASE (Docker internal network)
# =============================================================================
# DB_PASSWORD is used by docker-compose to set PostgreSQL password
# The full DATABASE_URL is constructed in docker-compose.yml
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Flag to use standard pg driver instead of Neon serverless
USE_STANDARD_PG=true

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate with: openssl rand -base64 64
JWT_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_64_MINIMUM_32_CHARS

# Generate with: openssl rand -base64 32
SESSION_SECRET=GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Password hashing rounds (12 is recommended for production)
BCRYPT_SALT_ROUNDS=12

# JWT token expiry
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# =============================================================================
# CORS & SECURITY
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CSRF protection
ENABLE_CSRF_PROTECTION=true

# Detailed errors (MUST be false in production)
ENABLE_DETAILED_ERRORS=false

# =============================================================================
# QDRANT VECTOR STORE (Docker internal network)
# =============================================================================
# When running in Docker, Qdrant is accessible at http://qdrant:6333
# The QDRANT_URL is set in docker-compose.yml
QDRANT_API=

# =============================================================================
# WHATSAPP BUSINESS API
# =============================================================================
CLOUD_API_ACCESS_TOKEN=your_whatsapp_access_token
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_GRAPH_API_VERSION=v20.0
WA_PHONE_NUMBER_ID=your_phone_number_id
WABA_ID=your_waba_id
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token

# =============================================================================
# ORBCOMM IoT INTEGRATION
# =============================================================================
ORBCOMM_URL=wss://wamc.wamcentral.net:44355/cdh
ORBCOMM_USERNAME=your_orbcomm_username
ORBCOMM_PASSWORD=your_orbcomm_password
ENABLE_ORBCOMM_DEV=false

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Settings
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_SECURE=false
EMAIL_FROM=noreply@your-domain.com

# Mailgun (fallback)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your-domain.com
MAILGUN_FROM=noreply@your-domain.com

# =============================================================================
# AI SERVICES
# =============================================================================
GOOGLE_AI_API_KEY=your_google_ai_api_key
OPENAI_API_KEY=your_openai_api_key
NVIDIA_API_KEY=your_nvidia_api_key

# =============================================================================
# EXTERNAL INVENTORY (Optional)
# =============================================================================
# If you have an external inventory database
INVENTORY_SOURCE_DATABASE_URL=
INVENTORY_SOURCE_TABLE=public.products
INVENTORY_COL_ID=id
INVENTORY_COL_PART_NAME=name
INVENTORY_COL_PART_NUMBER=sku
INVENTORY_COL_CATEGORY=type
INVENTORY_COL_QTY=stock_available
INVENTORY_COL_PRICE=price
INVENTORY_COL_REORDER=min_stock_level
INVENTORY_COL_CREATED_AT=created_at
INVENTORY_COL_UPDATED_AT=updated_at

# =============================================================================
# OTHER SERVICES
# =============================================================================
REACT_APP_MAPMYINDIA_API_KEY=your_mapmyindia_api_key
TRACKINGMORE_API_KEY=your_trackingmore_api_key

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_optional

# =============================================================================
# LEGACY AUTH (disable after migration)
# =============================================================================
ALLOW_LEGACY_AUTH=false
